<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/site_preferences_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/site_pref_item_toggle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/pad_small"
        android:text="" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/site_pref_item_settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/site_pref_item_toggle"
        android:layout_toEndOf="@id/site_pref_item_toggle"
        android:background="@color/transparent"
        android:minWidth="0dp"
        android:paddingHorizontal="@dimen/pad_small"
        android:text=""
        android:textAllCaps="false"
        app:icon="@drawable/outline_settings_24"
        app:iconPadding="5dp"
        tools:ignore="RelativeOverlap"
        tools:text="@string/hello_blank_fragment" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/site_pref_item_drag_handle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/site_pref_item_toggle"
        android:layout_alignParentEnd="true"
        android:background="@color/transparent"
        android:clickable="true"
        app:icon="@drawable/baseline_drag_indicator_24"
        tools:ignore="RelativeOverlap" />

</RelativeLayout>
